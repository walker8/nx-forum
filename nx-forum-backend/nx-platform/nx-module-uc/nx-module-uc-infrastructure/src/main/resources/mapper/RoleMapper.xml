<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leyuz.uc.auth.role.RoleMapper">
    
    <select id="queryRoles" resultType="com.leyuz.uc.auth.role.RolePO">
        SELECT * FROM uc_roles
        WHERE is_deleted = 0
        <if test="params.roleName != null and params.roleName != ''">
            AND role_name LIKE CONCAT('%', #{params.roleName}, '%')
        </if>
        <if test="params.roleStatus != null and params.roleStatus > 0">
            AND role_status = #{params.roleStatus}
        </if>
        ORDER BY role_id DESC
    </select>
    
</mapper>

